<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a
						href="#login"
						class="active"
					>Login</a></li>
				<li class="tab col s6"><a
						class="#active"
						href="#register"
					>Register</a></li>
			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">
			<h3>Login to the store</h1>
			<form action="/login" method="post">
				<div class="input-field">
					<input
						id="email"
						name="email"
						type="email"
						class="validate"
						required
					/>
					<label for="email">Email</label>
					<span class="helper-text" data-error="Enter email"></span>
				</div>
				<div class="input-field">
					<input
						id="password"
						name="password"
						type="password"
						class="validate"
						required
					/>
					<label for="password">Password</label>
					<span class="helper-text" data-error="Enter password"></span>
				</div>
				<button type="submit" class="btn btn-primary">Login</button>
			</form>
		</div>
		<div id="register" class="col s6 offset-s3">
			<h3>Register in the store</h1>
			<form action="/register" method="post">
        <div class="input-field">
          <input
            id="name"
            name="name"
            type="text"
            class="validate"
            required
          />
          <label for="name">Name</label>
          <span class="helper-text" data-error="Enter name"></span>
        </div>
        <div class="input-field">
          <input
            id="remail"
            name="email"
            type="email"
            class="validate"
            required
          />
          <label for="remail">Email</label>
          <span class="helper-text" data-error="Enter email"></span>
        </div>
        <div class="input-field">
          <input
            id="rpassword"
            name="password"
            type="password"
            class="validate"
            required
          />
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
		<div class="input-field">
          <input
            id="confirm"
            name="confirm"
            type="password"
            class="validate"
            required
          />
          <label for="confirm">Repeat the assword</label>
          <span class="helper-text" data-error="Enter password"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
		</div>
	</div>
</div>