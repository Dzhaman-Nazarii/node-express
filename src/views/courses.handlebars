<h1>Courses</h1>
{{#if courses.length}}
	{{#each courses}}
		<div class="row">
			<div class="col s6 offset-s3">
				<div class="card">
					<div class="card-image">
						<img src="{{img}}" alt="{{title}}"/>
					</div>
					<div class="card-content">
						<h3>{{title}}</h2>
						<h4 class="price">{{price}}$</h4>
					</div>
					<div class="card-action">
						<a href="/courses/{{id}}">Open course</a>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
{{else}}
	<p>There are no courses yet</p>
{{/if}}