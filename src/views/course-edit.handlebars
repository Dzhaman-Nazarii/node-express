<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
	<div class="input-field">
		<input id="title" name="title" type="text" class="validate" required value="{{course.title}}" />
		<label for="title">Course name</label>
		<span class="helper-text" data-error="Add title"></span>
	</div>
	<div class="input-field">
		<input id="price" name="price" type="number" class="validate" required min="10" value="{{course.price}}" />
		<label for="price">Course price</label>
		<span class="helper-text" data-error="Add price"></span>
	</div>
	<div class="input-field">
		<input id="img" name="img" type="text" class="validate" required value="{{course.img}}" />
		<label for="img">URL image</label>
		<span class="helper-text" data-error="Add URL image"></span>
	</div>

	<input type="hidden" name="id" value="{{course.id}}">
	<button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="post">
<input type="hidden" name="id" value={{course.id}}>
	<button type="submit" class="btn red">Delete course</button>
</form>